<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Bienvenid@!\n¡Estás invitad@ a nuestra boda!"
        android:padding="16dp"
        android:gravity="center"
        style="@style/Title.Bold"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/novios"
        android:layout_gravity="center"
        android:contentDescription="@string/blank"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puedes acceder a las diferentes secciones para informarte sobre todo lo que necesitas saber, o si lo prefieres, ponte en contacto con nosotros directamente"
                android:layout_margin="16dp"
                android:gravity="center"
                style="@style/Form.Italic"
                android:textColor="@color/colorPrimaryDark"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/colorPrimaryDark"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="5dp"
                card_view:cardCornerRadius="15dp"
                card_view:contentPadding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/phone_sandra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_phone_white_24dp"
                        android:contentDescription="@string/blank"
                        android:paddingLeft="32dp"
                        android:paddingRight="32dp"/>

                    <ImageView
                        android:id="@+id/mail_sandra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_email_white_24dp"
                        android:contentDescription="@string/blank"
                        android:paddingLeft="16dp"
                        android:paddingRight="24dp"/>

                    <ImageView
                        android:id="@+id/whatsapp_sandra"
                        android:layout_width="84dp"
                        android:layout_height="48dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/whatsapp"
                        android:contentDescription="@string/blank"
                        android:paddingLeft="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sandra"
                        style="@style/Body"
                        android:gravity="center"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/colorPrimaryDark"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="5dp"
                card_view:cardCornerRadius="15dp"
                card_view:contentPadding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/phone_david"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_phone_white_24dp"
                        android:contentDescription="@string/blank"
                        android:paddingLeft="32dp"
                        android:paddingRight="32dp"/>

                    <ImageView
                        android:id="@+id/mail_david"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_email_white_24dp"
                        android:contentDescription="@string/blank"
                        android:paddingLeft="16dp"
                        android:paddingRight="24dp"/>

                    <ImageView
                        android:id="@+id/whatsapp_david"
                        android:layout_width="84dp"
                        android:layout_height="48dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/whatsapp"
                        android:contentDescription="@string/blank"
                        android:paddingLeft="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="David"
                        style="@style/Body"
                        android:gravity="center"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>